<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="main.java.co.uk.myhandicap.service.UserService"/>
    </bean>

    <bean id="scoreCardService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="main.java.co.uk.myhandicap.service.ScoreCardService"/>
    </bean>

    <bean id="mapper" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.dozer.Mapper"/>
    </bean>

    <bean id="HoleValidator" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="main.java.co.uk.myhandicap.validation.validator.HoleValidator"/>
    </bean>

    <bean id="handicapCalculation" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="main.java.co.uk.myhandicap.calculation.HandicapCalculation"/>
    </bean>

    <bean id="golfRound" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="main.java.co.uk.myhandicap.calculation.GolfRound"/>
    </bean>

</beans>